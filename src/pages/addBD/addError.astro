---
import Icon from '../../components/AstroIcon.astro';

import BaseLayout from "../../layouts/BaseLayout.astro";


---

<BaseLayout title='Page not found' permalink={'/404'} noIndex={true}>
    <!-- Legacy roadmp pages handling -->
  
    <div class='bg-gray-100'>
      <div class='py-10 md:py-32 container flex flex-col md:flex-row items-center justify-center gap-7'>
        <Icon icon='construction' class='hidden md:block' />
        <div class='text-left md:text-left'>
          <h1
            class='font-extrabold text-transparent text-2xl leading-normal md:text-5xl md:leading-normal bg-clip-text bg-gradient-to-t from-black to-gray-600'
          >
            Error al intentar introducir nueva información en la BD
          </h1>
          <p class='text-md md:text-xl mb-2'>Probablemente, clave repetida. Modifica el título.</p>
          <p>
            <a class='underline text-blue-700' href='/'>Homepage</a> 
            &middot; <a
              href='/addBD/addCategoria'
              class='underline text-blue-700'>Añadir categoría</a
            > &middot; <a href='/addBD/addRecurso' class='underline text-blue-700'>Añadir recurso</a>
          </p>
        </div>
      </div>
    </div>
  </BaseLayout>